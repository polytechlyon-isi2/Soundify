{% extends "layout.html.twig" %} 
{% block title %}Home{% endblock %}

{% block menu %}
{% for category in categories %}
<li>
    <a href="/category/{{ category.id }}"><i class=" fa fa-cog "></i>{{ category.name }}</a>
</li>
{% endfor %}
{% endblock %}

{% block number %}
{{ number }}
{% endblock %}

{% block content %}
<article>
    <div class="panel panel-info">

        <div class="panel-heading text-center">
            <div class="panel-title" style=" font-size: 22px;">{{product.name}} <h4 class="text-right"><span class="label label-danger">{{product.price}}â‚¬</span> <span class="label label-default"><span class="glyphicon glyphicon-tag"></span> {{product.category}}</span></h4></div>
        </div>
        <div class="panel-body">
            <div class="row">
                <img class="col-md-6 img-responsive" src="{{asset('/img/'~product.image)}}"/>
                <div class="col-md-6 text-right">
                    <p>{{product.longdescription}}</p>
                    <a href="/cart/{{product.id}}/add" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span> Ajouter au panier</a>
                </div>
            </div>
        </div>
    </div>
</article>
{% endblock %}